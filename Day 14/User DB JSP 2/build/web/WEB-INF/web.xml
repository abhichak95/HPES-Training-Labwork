<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>driver</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mysql://localhost:3306/user_db_project</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPass</param-name>
        <param-value>password</param-value>
    </context-param>
    <context-param>
        <param-name>logout</param-name>
        <param-value>LogOut</param-value>
    </context-param>
    <servlet>
        <servlet-name>Authenticate</servlet-name>
        <servlet-class>com.hp.stp.j2sh.Authenticate</servlet-class>
        <init-param>
            <param-name>user</param-name>
            <param-value>user.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>admin</param-name>
            <param-value>admin.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>home</param-name>
            <param-value>mainHomePage.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>com.hp.stp.j2sh.LogOut</servlet-class>
        <init-param>
            <param-name>homepage</param-name>
            <param-value>mainHomePage.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>DBUpdate</servlet-name>
        <servlet-class>com.hp.stp.j2sh.DBUpdate</servlet-class>
        <init-param>
            <param-name>insert</param-name>
            <param-value>registerPage.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>delete</param-name>
            <param-value>Delete</param-value>
        </init-param>
        <init-param>
            <param-name>update</param-name>
            <param-value>updatePage.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Delete</servlet-name>
        <servlet-class>com.hp.stp.j2sh.Delete</servlet-class>
        <init-param>
            <param-name>homepage</param-name>
            <param-value>mainHomePage.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>admin</param-name>
            <param-value>admin.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>com.hp.stp.j2sh.Update</servlet-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>admin.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>user.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.hp.stp.j2sh.Register</servlet-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value>admin.jsp</param-value>
        </init-param>
        <init-param>
            <param-name>homepage</param-name>
            <param-value>mainHomePage.jsp</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>UserPageUpdate</servlet-name>
        <servlet-class>com.hp.stp.j2sh.UserPageUpdate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authenticate</servlet-name>
        <url-pattern>/Authenticate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/LogOut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DBUpdate</servlet-name>
        <url-pattern>/DBUpdate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Delete</servlet-name>
        <url-pattern>/Delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/Update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserPageUpdate</servlet-name>
        <url-pattern>/UserPageUpdate</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>mainHomePage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
